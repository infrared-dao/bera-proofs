# Beacon Network Configuration
# Set the network to use: 'testnet' or 'mainnet'
BEACON_NETWORK=testnet

# Beacon RPC URLs
# Configure these with your beacon node endpoints
BEACON_RPC_URL_TESTNET=
BEACON_RPC_URL_MAINNET=

# Legacy support - if set, will override network-specific URLs
# BEACON_RPC_URL=https://custom-beacon-node.example.com

# API Server Configuration  
API_HOST=0.0.0.0
API_PORT=8000

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Request Configuration
REQUEST_TIMEOUT=30
CACHE_TTL=300 